{
  "name": "@photon-sdk/photon-lib",
  "version": "0.11.0",
  "description": "A high level library for building bitcoin wallets with react native",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/photon-sdk/photon-lib.git"
  },
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run build:clean -s && npm run build:dist -s",
    "build:clean": "rm -rf dist && mkdir dist",
    "build:dist": "babel ./src -d ./dist -s",
    "prepare": "npm run build",
    "test": "npm run test:lint && npm run test:unit && npm run test:unit:android && npm run test:integration",
    "test:lint": "eslint ./src",
    "test:unit": "jest __tests__/unit/*",
    "test:unit:android": "jest --config jest.android.json __tests__/unit/.*\\.android\\..*",
    "test:integration": "jest __tests__/integration/*"
  },
  "dependencies": {
    "@photon-sdk/rn-electrum-client": "^4.0.0",
    "base-x": "^3.0.8",
    "bc-ur": "^0.1.6",
    "bech32": "^1.1.4",
    "bignumber.js": "^9.0.1",
    "bip32": "^2.0.6",
    "bip39": "3.0.4",
    "bitcoinjs-lib": "^5.2.0",
    "bitcoinjs-message": "^2.2.0",
    "bs58check": "^2.1.2",
    "buffer-reverse": "^1.0.1",
    "chacha": "^2.1.0",
    "coinselect": "^3.1.12",
    "create-hash": "^1.2.0",
    "electrum-mnemonic": "^2.0.0",
    "frisbee": "^3.1.2",
    "util": "^0.12.3"
  },
  "peerDependencies": {
    "@photon-sdk/react-native-icloudstore": "^1.0.0",
    "@photon-sdk/react-native-tcp": "^6.0.0",
    "@react-native-async-storage/async-storage": "^1.15.15",
    "@react-native-google-signin/google-signin": "^7.0.4",
    "@robinbobin/react-native-google-drive-api-wrapper": "^1.0.1",
    "node-libs-react-native": "^1.2.0",
    "react-native-device-info": "^10.3.0",
    "react-native-keychain": "^6.0.0",
    "react-native-randombytes": "^3.5.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.10.4",
    "@babel/plugin-transform-modules-commonjs": "^7.21.2",
    "@babel/plugin-transform-typescript": "^7.21.3",
    "@babel/runtime": "^7.10.4",
    "@photon-sdk/react-native-icloudstore": "^1.0.0",
    "@react-native-async-storage/async-storage": "^1.15.15",
    "@react-native-community/eslint-config": "^2.0.0",
    "@react-native-google-signin/google-signin": "^7.0.4",
    "@robinbobin/react-native-google-drive-api-wrapper": "^1.0.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "9.2.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-standard": "^4.0.2",
    "jest": "^26.1.0",
    "metro-react-native-babel-preset": "^0.63.0",
    "react": "16.11.0",
    "react-native": "0.62.2",
    "react-native-device-info": "^10.3.0",
    "react-native-keychain": "^6.0.0"
  },
  "react-native": {
    "crypto": "@photon-sdk/photon-lib/src/crypto"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "setupFiles": [
      "./__tests__/setup.js"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/node_modules"
    ],
    "testPathIgnorePatterns": [
      "node_modules",
      ".*\\.android\\..*"
    ]
  }
}
